generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  name        String  @unique @db.String
  longDesc    String? @db.String
  shortDesc   String? @db.String
  views       String?
  ingredients String?
  nutrition   String?
  useAge      String?
  expiration  String?

  // relations
  Media Media[]
}

model Media {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  url       String   @unique
  name      String   @unique
  // relations
  Banner    Banner?
  Product   Product? @relation(fields: [productId], references: [id])
  productId String?  @db.ObjectId
}

model Banner {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  // relations
  Media Media  @relation(fields: [url], references: [url])
  url   String @unique
}

model Account {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  username String @unique
  password String
}

model Setting {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  address   String?
  logo      String?
  siteTitle String?
  email     String?
}

model Tiktok {
  id  String @id @default(auto()) @map("_id") @db.ObjectId
  url String
}
